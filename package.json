{
  "name": "charm-console",
  "version": "1.0.3",
  "main": "src/index.ts",
  "exports": {
    "import": "./dist/index.min.js",
    "require": "./dist/index.umd.min.js",
    "default": "./dist/index.min.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "NODE_ENV=local nodemon --exec tsx src/index.ts",
    "watch-ts": "tsc -w",
    "prebuild": "rm -rf dist",
    "build": "rollup -c",
    "prepare": "npm run build"
  },
  "keywords": [
    "console",
    "高亮",
    "渐变",
    "时间戳",
    "node",
    "browser",
    "esm",
    "日志美化"
  ],
  "files": [
    "dist/**/*"
  ],
  "author": "dw <wangdongovo@gmail.com>",
  "license": "MIT",
  "description": "重写 console 方法，支持渐变高亮和时间戳，兼容浏览器和 Node.js，ESM 支持。",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "rollup": "^4.45.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/gradient-string": "^1.1.6",
    "gradient-string": "^3.0.0",
    "tsx": "^4.20.3"
  }
}